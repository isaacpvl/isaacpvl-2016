block header
	header.dark
		.wrap
			.logo
				span#logo(data-speed="5.55")
					img.fadeindownb(src="/images/socialcrunch/logob.png")
			.title
				span#title(data-speed="2.85")
					h1.fadeinup An addictive data game of question & comparison.
	.push
		div

block overview
	.arrowbar
		.arrowb
	.head
		span.fadeinleft
		h5.caps.fadeinup Overview
		span.fadeinright
	.wrap.hidden
