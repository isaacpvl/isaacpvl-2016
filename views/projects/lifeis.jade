
block nav
	nav.dark.hide
		ul
			include ../resource/pvl
			li.nav.navb#navb
				a#navlink(data-pathname="socialcrunch")
					span &#8249;
					| Prev Project
			li.nav.navc#navc
				a#navlink(data-pathname="overdog")
					| Next Project
					span &#8250;

block header
	header.dark.hide
		.wrap
			.logo
				span#logo(data-speed="5.55")
					img(src="/images/lifeis/logob.gif")
			.title
				span#title(data-speed="2.85")
					h1 Branding feelings of life through the web.
		.lifebg
			img(src="/images/lifeis/bg.png")
		.fade
		.slide
	.push#push

block work
	section.work.bgfade
		.arrowbar#arrow.hide
			.arrow#work
		.head
			h5 Overview
		.wrap
			.overview
				.detail.single
					p I did a happy feel-good brand for this new e-magazine and fundraising platform, and then carried those vibes onto the web.
				.context
					div
						h6 My Role:
						p web design & brand
					div
						h6 When:
						p late 2013
					div
						h6 With:
						p just me, freelancing
		.itemhead
			h3 Brand & landing page
		.visual.full
			.browser.large
				.top
					ul
						li
						li
						li
					span life.is
				video(preload="auto", autoplay="true", loop="loop", muted="muted", poster="/images/lifeis/life-menu-poster.jpg")
					source(src="/images/lifeis/life-menu.webm", type="video/webm")
					source(src="/images/lifeis/life-menu.mp4", type="video/mp4")
		.visual.two-col.gap
			.shot
				img.frame(src="/images/lifeis/life-brand.gif")
			.shot
				img.frame(src="/images/lifeis/life-landing.jpg")
		.itemhead
			h3 Community fundraiser page
		.visual
			.browser.large
				.top
					ul
						li
						li
						li
					span life.is/fundraiser/ny-community-garden
				img(src="/images/lifeis/life-03.jpg")
		.itemhead
			h3 Fundraiser item purchase page
		.visual
			.browser.large
				.top
					ul
						li
						li
						li
					span life.is/fundraiser/ny-community-garden#buy
				img(src="/images/lifeis/life-04.jpg")
		.footlink
			p you can also check out <a  href="https://dribbble.com/isaacpvl/projects/167510-life-is", target="_blank">this project on dribbble</a>

block next
	section.next.overdog#navlink(data-pathname="overdog")
		.head
			h5 Next Project
		.peek#next
			img(src="/images/overdog/logo.png")
